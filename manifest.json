{
  "manifest_version": 2,
  "name": "RadPin for Pinterest",
  "version": "1.0",
  "icons": {"128": "radpin-128.png", "48": "radpin-48.png"},
  "description": "Pin your to your board with only two key strokes away!",
  "short_name": "RadPin",

  "background": {
    "scripts": ["background.js"]
  },

  "options_page" : "options/options.html",

  "content_scripts": [
    {
      "matches":  ["*://*.pinterest.com/*"],
      "css":      ["content_script.css"],
      "js":       ["jquery.min.js", "mousetrap.min.js", "pinterest_content_script.js"]
    }
  ],

  "page_action":
  {
    "default_icon": "radpin-19.png",
    "default_title": "RadPin"
  },

  "permissions": [
    "*://*.pinterest.com/*",
    "tabs",
    "storage"
  ]
}