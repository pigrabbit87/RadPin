{
  "manifest_version": 2,
  "name": "RadPin",
  "version": "1.0",
  "icons": {"128": "icon-128.png"},
  "description": "Pin your to your board with only one key stroke away!",

  "background": {
    "scripts": ["background.js"]
  },

  "options_page" : "options/options.html",

  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["jquery.min.js", "mousetrap.min.js", "pinterest_content_script.js"]
    }
  ],

  "page_action":
  {
    "default_icon": "icon-19.png",
    "default_title": "You're at Intercom Page",
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://*.pinterest.com/*",
    "tabs",
    "storage"
  ]
}